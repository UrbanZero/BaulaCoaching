<section id="career" class="max-w-6xl mx-auto px-6 py-5">
  <h2 class="text-3xl md:text-4xl font-extrabold mb-5 text-center">Trajectory</h2>

  <div class="relative">
    <!-- Timeline line -->
    <div class="absolute top-5 left-0 w-full h-1 bg-gray-700"></div>

    <!-- Scrollable container -->
    <div
      id="timelineScroll"
      class="flex overflow-x-auto gap-5 pb-4 timeline-scroll"
    >
      {[
        { date: "2016-2017", team: "Zaga Talent Gaming" },
        { date: "2017-2018", team: "Infinity Esports" },
        { date: "2018", team: "Predators Esports" },
        { date: "2018-2019", team: "Rainbow7" },
        { date: "2019", team: "Xten Esports" },
        { date: "2019-2022", team: "Furious Gaming" },
        { date: "2022", team: "All Knights" },
        { date: "2022-2023", team: "The Kings" },
        { date: "2023", team: "Bandits Gaming" },
        { date: "2024", team: "Fuego" },
        { date: "2025-Present", team: "SDM Tigres" },
      ].map((item) => (
        <div class="flex flex-col items-center flex-shrink-0 min-w-[120px]">
          <div class="w-4 h-4 rounded-full bg-amber-500 border-4 border-gray-900 relative z-10"></div>
          <div class="mt-4 text-sm font-semibold">{item.team}</div>
          <div class="text-xs text-gray-400 text-center">{item.date}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  const timeline = document.getElementById("timelineScroll");
  if (timeline) {
    timeline.addEventListener("wheel", (e) => {
      e.preventDefault();
      timeline.scrollLeft += e.deltaY; // Convert vertical scroll to horizontal
    });
  }
</script>
